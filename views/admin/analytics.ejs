<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Analytics</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

  <!-- Top Bar -->
  <nav class="bg-white shadow px-6 py-4 flex justify-between items-center">
    <h1 class="text-2xl font-bold text-blue-600">MENDit</h1>
    <a
      href="/logout"
      class="text-sm font-medium text-red-500 hover:text-red-600"
    >
      Logout
    </a>
  </nav>

  <!-- Main Content -->
  <main class="max-w-6xl mx-auto p-6">

    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-3xl font-semibold text-gray-800">
        Worker Performance Analytics
      </h2>

      <div class="flex gap-3">
        <a
          href="/admin/dashboard"
          class="text-sm font-medium text-blue-600 hover:underline"
        >
          ← Back to Dashboard
        </a>

        <a
          href="/admin/analytics/export"
          class="bg-green-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-green-700 transition"
        >
          Export CSV
        </a>
      </div>
    </div>

    <!-- Table -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
      <table class="min-w-full text-sm">
        <thead class="bg-gray-200 text-gray-700">
          <tr>
            <th class="px-4 py-3 text-left">Name</th>
            <th class="px-4 py-3 text-center">Department</th>
            <th class="px-4 py-3 text-center">Complaints Handled</th>
            <th class="px-4 py-3 text-center">Average Rating</th>
            <th class="px-4 py-3 text-center">Total Cost</th>
          </tr>
        </thead>

        <tbody class="divide-y">
          <% if (workerStats.length === 0) { %>
            <tr>
              <td colspan="5" class="px-4 py-6 text-center text-gray-500">
                No analytics data available yet.
              </td>
            </tr>
          <% } %>

          <% workerStats.forEach(w => { %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3 font-medium text-gray-800">
                <%= w.name %>
              </td>

              <td class="px-4 py-3 text-center">
                <span class="px-3 py-1 rounded-full text-xs font-semibold bg-indigo-100 text-indigo-700">
                  <%= w.department %>
                </span>
              </td>

              <td class="px-4 py-3 text-center">
                <%= w.complaints %>
              </td>

              <td class="px-4 py-3 text-center">
                <% if (w.avgRating === "N/A") { %>
                  <span class="text-gray-400">N/A</span>
                <% } else { %>
                  <span class="font-medium text-green-600">
                    <%= w.avgRating %> ★
                  </span>
                <% } %>
              </td>

              <td class="px-4 py-3 text-center font-medium">
                ₹ <%= w.totalCost %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </main>

</body>
</html>
