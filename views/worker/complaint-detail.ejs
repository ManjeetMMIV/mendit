<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Complaint Detail</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

  <!-- Top Bar -->
  <nav class="bg-white shadow px-6 py-4 flex justify-between items-center">
    <h1 class="text-2xl font-bold text-blue-600">MENDit</h1>
    <a
      href="/logout"
      class="text-sm font-medium text-red-500 hover:text-red-600"
    >
      Logout
    </a>
  </nav>

  <!-- Main Content -->
  <main class="max-w-4xl mx-auto p-6">
    <div class="mb-6">
      <h2 class="text-3xl font-semibold text-gray-800">
        <%= complaint.title %>
      </h2>
      <p class="text-gray-600 mt-1">
        Complaint details and status update
      </p>
    </div>

    <!-- Complaint Info -->
    <div class="bg-white rounded-lg shadow p-6 mb-6 space-y-4">
      <p>
        <span class="font-medium text-gray-700">Description:</span>
        <span class="text-gray-900"><%= complaint.description %></span>
      </p>

      <div class="flex flex-wrap gap-4">
        <div>
          <span class="font-medium text-gray-700">Priority:</span>
          <% if (complaint.priority === "Emergency") { %>
            <span class="ml-2 px-3 py-1 rounded-full text-xs font-semibold bg-red-100 text-red-700">
              Emergency
            </span>
          <% } else { %>
            <span class="ml-2 px-3 py-1 rounded-full text-xs font-semibold bg-blue-100 text-blue-700">
              Normal
            </span>
          <% } %>
        </div>

        <div>
          <span class="font-medium text-gray-700">Current Status:</span>
          <span class="ml-2 px-3 py-1 rounded-full text-xs font-semibold bg-gray-100 text-gray-700">
            <%= complaint.status %>
          </span>
        </div>
      </div>
    </div>

    <!-- Update Form -->
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-xl font-semibold text-gray-800 mb-4">
        Update Complaint
      </h3>

      <form
        method="POST"
        action="/worker/complaints/<%= complaint.id %>/update"
        class="space-y-5"
      >

        <!-- Status -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Update Status
          </label>
          <select
            name="status"
            required
            class="w-full px-4 py-2 border rounded-md bg-white focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="In Progress">In Progress</option>
            <option value="Completed">Completed</option>
          </select>
        </div>

        <!-- Cost -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Material Cost (optional)
          </label>
          <input
            type="number"
            name="cost"
            min="0"
            placeholder="Enter cost in INR"
            class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Actions -->
        <div class="flex items-center justify-between pt-4">
          <a
            href="/worker/dashboard"
            class="text-sm font-medium text-gray-600 hover:text-gray-800"
          >
            ‚Üê Back to Dashboard
          </a>

          <button
            type="submit"
            class="bg-green-600 text-white px-6 py-2 rounded-md font-medium hover:bg-green-700 transition"
          >
            Update Complaint
          </button>
        </div>

      </form>
    </div>
  </main>

</body>
</html>
