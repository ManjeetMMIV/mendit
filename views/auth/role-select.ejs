<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>MENDit | VNIT Hostel Grievance Portal</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-cover bg-center"
      style="background-image: url('/images/vnit.jpg');">

  <!-- Dark Overlay -->
  <div class="min-h-screen bg-black/60 flex items-center justify-center">

    <div class="max-w-5xl w-full px-6">

      <!-- Title -->
      <div class="text-center mb-10">
        <h1 class="text-4xl md:text-5xl font-bold text-white">
          MENDit
        </h1>
        <p class="text-gray-200 mt-2 text-lg">
          Redefining Hostel Grievances at VNIT Nagpur
        </p>
      </div>

      <!-- Role Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">

        <!-- Student -->
        <a href="/login/student"
           class="bg-white/90 backdrop-blur rounded-xl shadow-lg p-6 text-center hover:scale-105 transition">
          <h2 class="text-xl font-semibold text-gray-800 mb-2">
            Student
          </h2>
          <p class="text-gray-600 text-sm">
            Raise and track hostel-related complaints
          </p>
        </a>

        <!-- Worker -->
        <a href="/login/worker"
           class="bg-white/90 backdrop-blur rounded-xl shadow-lg p-6 text-center hover:scale-105 transition">
          <h2 class="text-xl font-semibold text-gray-800 mb-2">
            Worker
          </h2>
          <p class="text-gray-600 text-sm">
            Resolve assigned hostel complaints
          </p>
        </a>

        <!-- Admin -->
        <a href="/login/admin"
           class="bg-white/90 backdrop-blur rounded-xl shadow-lg p-6 text-center hover:scale-105 transition">
          <h2 class="text-xl font-semibold text-gray-800 mb-2">
            Admin
          </h2>
          <p class="text-gray-600 text-sm">
            Monitor and manage hostel grievances
          </p>
        </a>

      </div>

      <!-- VNIT Hostel Link -->
      <div class="text-center mt-10">
        <a
          href="https://vnit.ac.in/section/hostel/"
          target="_blank"
          class="text-gray-200 text-sm underline hover:text-white"
        >
          Visit Official VNIT Hostel Section
        </a>
      </div>

    </div>

  </div>

</body>
</html>

