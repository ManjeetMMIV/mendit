<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Student Signup | MENDit</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-100 flex items-center justify-center">

  <div class="w-full max-w-md px-6">
    <!-- Card -->
    <div class="bg-white rounded-xl shadow-lg p-8">

      <!-- Heading -->
      <h2 class="text-3xl font-bold text-center text-blue-600 mb-2">
        Student Signup
      </h2>
      <p class="text-center text-gray-600 mb-6">
        Create your account to raise hostel complaints
      </p>

      <!-- Signup Form -->
      <form method="POST" class="space-y-4">

        <!-- Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Full Name
          </label>
          <input
            name="name"
            type="text"
            placeholder="Enter your full name"
            required
            class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Email -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Email
          </label>
          <input
            name="email"
            type="email"
            placeholder="Enter your email"
            required
            class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Password -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Password
          </label>
          <input
            name="password"
            type="password"
            placeholder="Create a password"
            required
            class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Submit -->
        <button
          type="submit"
          class="w-full bg-blue-600 text-white py-2 rounded-md font-medium hover:bg-blue-700 transition"
        >
          Sign Up
        </button>
      </form>

      <!-- Login Link -->
      <p class="text-center text-sm text-gray-600 mt-6">
        Already have an account?
        <a
          href="/login/student"
          class="text-blue-600 font-medium hover:underline"
        >
          Login
        </a>
      </p>

      <!-- Back -->
      <div class="text-center mt-4">
        <a
          href="/"
          class="text-sm text-gray-500 hover:text-gray-700"
        >
          ‚Üê Back to Role Selection
        </a>
      </div>

    </div>
  </div>

</body>
</html>
