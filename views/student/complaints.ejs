<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>My Complaints</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

  <!-- Top Bar -->
  <nav class="bg-white shadow px-6 py-4 flex justify-between items-center">
    <h1 class="text-2xl font-bold text-blue-600">MENDit</h1>
    <a href="/logout" class="text-sm font-medium text-red-500 hover:text-red-600">
      Logout
    </a>
  </nav>

  <!-- Main Content -->
  <main class="max-w-6xl mx-auto p-6">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-3xl font-semibold text-gray-800">My Complaints</h2>
      <a
        href="/student/dashboard"
        class="text-sm font-medium text-blue-600 hover:underline"
      >
        ← Back to Dashboard
      </a>
    </div>

    <div class="bg-white rounded-lg shadow overflow-x-auto">
      <table class="min-w-full text-sm">
        <thead class="bg-gray-200 text-gray-700">
          <tr>
            <th class="px-4 py-3 text-left">Title</th>
            <th class="px-4 py-3 text-center">Priority</th>
            <th class="px-4 py-3 text-center">Status</th>
            <th class="px-4 py-3 text-center">Action</th>
          </tr>
        </thead>

        <tbody class="divide-y">
          <% if (complaints.length === 0) { %>
            <tr>
              <td colspan="4" class="px-4 py-6 text-center text-gray-500">
                No complaints found.
              </td>
            </tr>
          <% } %>

          <% complaints.forEach(c => { %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3 font-medium text-gray-800">
                <%= c.title %>
              </td>

              <td class="px-4 py-3 text-center">
                <% if (c.priority === "Emergency") { %>
                  <span class="px-3 py-1 rounded-full text-xs font-semibold bg-red-100 text-red-700">
                    Emergency
                  </span>
                <% } else { %>
                  <span class="px-3 py-1 rounded-full text-xs font-semibold bg-blue-100 text-blue-700">
                    Normal
                  </span>
                <% } %>
              </td>

              <td class="px-4 py-3 text-center">
                <span class="px-3 py-1 rounded-full text-xs font-semibold bg-gray-100 text-gray-700">
                  <%= c.status %>
                </span>
              </td>

              <td class="px-4 py-3 text-center">
                <% if (c.status === "Completed") { %>
                  <a
                    href="/student/complaints/<%= c.id %>/feedback"
                    class="text-sm font-medium text-green-600 hover:underline"
                  >
                    Give Feedback
                  </a>
                <% } else { %>
                  <span class="text-gray-400">—</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </main>

</body>
</html>
